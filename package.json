{
  "name": "@fauziralpiandi/eslint-config",
  "version": "2.0.0",
  "description": "ESLint config for @fauziralpiandi",
  "keywords": [
    "config",
    "eslint",
    "javascript",
    "typescript",
    "opinionated"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fauziralpiandi/eslint-config.git"
  },
  "license": "MIT",
  "author": "Fauzira Alpiandi <fauziralpiandi.dev@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "lint": "eslint --fix src",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc -p tsconfig.json",
    "test": "vitest run"
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.54.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.2.2",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "eslint": "^9",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
