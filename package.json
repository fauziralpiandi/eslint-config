{
  "name": "@fauziralpiandi/eslint-config",
  "version": "0.4.0",
  "description": "ESLint config for @fauziralpiandi",
  "keywords": [
    "eslint",
    "eslint-config",
    "opinionated"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fauziralpiandi/eslint-config.git"
  },
  "license": "MIT",
  "author": "Fauzira Alpiandi <fauziralpiandi.dev@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.mts",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "format": "prettier --write .",
    "lint": "eslint --fix src",
    "prepublishOnly": "pnpm build",
    "test": "vitest run"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.54.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.2.1",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "eslint": "^9",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
